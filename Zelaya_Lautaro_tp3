#include<stdio.h>
main () {
	int num;
	printf ("ingrese un numero para ver si par o impar: ");
	scanf ("%d", &num);
	if(num>0) {
		

	
	if (num%2==0){
	printf ("el resultado es par");	
		
	}
	else {
	
	printf ("el numero es impar");
}
}
else{
	printf("el numero no es mayor a 0");
}

};

